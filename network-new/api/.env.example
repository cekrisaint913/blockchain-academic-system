# API Configuration
NODE_ENV=development
PORT=4000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Hyperledger Fabric Configuration
CHANNEL_NAME=academic-channel
CHAINCODE_NAME=academic-cc

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info

# Admin User (default identity for public endpoints)
ADMIN_USER=Admin@school.academic.edu
ADMIN_ORG=SchoolMSP

# IPFS Configuration
# Option 1: Local IPFS node (default)
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# Option 2: Infura IPFS (uncomment and fill in credentials)
# INFURA_IPFS_PROJECT_ID=your-infura-project-id
# INFURA_IPFS_PROJECT_SECRET=your-infura-project-secret
